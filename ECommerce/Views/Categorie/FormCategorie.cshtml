@model Categorie
@{
    ViewData["Title"] = "FormCategorie";
}

<h2>Ajouter une categorie</h2>
<section class="form-control">
    <form asp-action="AddCategory" asp-controller="Categorie" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-3">
                Image :
            </div>
            <div class="col-md-9">
                <input class="form-control" type="file" name="image" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Titre :
            </div>
            <div class="col-md-9">
                <input class="form-control" asp-for="Titre" />
            </div>
        </div>
        <div class="row">
            <button class="col-md-12 form-control" type="submit">Ajouter</button>
        </div>
    </form>
</section>
