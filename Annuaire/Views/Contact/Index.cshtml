@model  List<ContactModel>
@{
    ViewData["Title"] = "Liste des contacts";
}

<h2>Liste des contacts</h2>
@if(ViewBag.message != null)
{
<section class="container">
    <div class="alert alert-success">@ViewBag.message</div>
    @*<div class="alert alert-success">@TempData["message"]</div>*@
</section>
}
<section class="container">
    @foreach(ContactModel c in Model)
    {
    <div class="row">
        <div class="col-md-1">@c.Id</div>
        <div class="col-md-3">@c.Nom</div>
        <div class="col-md-3">@c.Prenom</div>
        <div class="col-md-3">@c.Telephone</div>
        <div class="col-md-2"><a asp-controller="Contact" asp-action="DetailContact" asp-route-id="@c.Id">Detail</a></div>
        <div class="col-md-2"><a asp-controller="Contact" asp-action="EditContact" asp-route-id="@c.Id">Modifier</a></div>
        <div class="col-md-2"><a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@c.Id">Supprimer</a></div>
    </div>
    }
</section>